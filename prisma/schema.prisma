generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// =====================
//       MODELS
// =====================
//

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  createdAt DateTime @default(now())
}

model VisiMisi {
  id_visimisi Int    @id @default(autoincrement())
  visi        String  @db.Text
  misi        String  @db.Text
}

model StrukturGuru {
  id        Int      @id @default(autoincrement())
  name      String
  imageUrl  String
  createdAt DateTime @default(now())
}


model PPDB {
  id_ppdb      Int      @id @default(autoincrement())
  foto_poster  String   @db.VarChar(255)
  tanggal_upload DateTime @db.Date
}

model Berita {
  id_berita     Int      @id @default(autoincrement())
  judul         String   @db.VarChar(150)
  isi           String   @db.Text
  gambar        String   @db.VarChar(255)
  tanggal_upload DateTime @db.Date
}

model Galeri {
  id_galeri     Int      @id @default(autoincrement())
  judul         String   @db.VarChar(150)
  gambar        String   @db.VarChar(255)
  tanggal_upload DateTime @db.Date
}

model Alumni {
  id_alumni  Int    @id @default(autoincrement())
  nama       String @db.VarChar(100)
  foto_alumni String @db.VarChar(255)
  kutipan    String @db.Text
  universitas String @db.VarChar(150)
}

model GrafikMurid {
  id_grafik  Int      @id @default(autoincrement())
  foto_grafik String   @db.VarChar(255)
  tanggal     DateTime @db.Date
}